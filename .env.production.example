# Production environment configuration for docker-compose.production.yml

# Your GitHub username (required for pulling images)
GITHUB_USERNAME=your-github-username

# Image tag to deploy (latest, v1.0.0, sha-abc123, etc.)
IMAGE_TAG=latest

# Anthropic API key (required)
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Port to expose (default: 8000)
PORT=8000
